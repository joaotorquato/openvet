<div class="page-header">
  <h2>Meus Pets</h2>  
</div>
<% if @user.pets.empty? %>
<p>
   Você não possui pets cadastrados ainda, para começar a visualizar seus pets <strong><%= link_to "clique aqui", new_pet_path %></strong> para cadastrá-los
</p>
<% else %>
<% @pets.each do |pet| %>
  <div class="row">
    <div class="col-md-3 col-xs-12">
      <%= image_tag pet.photo.url(:medium), class: 'img-responsive'%>
    </div>
    <div class="col-md-3">
      <h2><%= link_to pet.name, pet_path(pet.id) %></h2>
      <ul class="list-unstyled">
        <li><strong>Espécie: </strong><%= pet.species %></li>
        <li><strong>Raça: </strong><%= pet.breed %></li>
        <li><strong>Gênero: </strong><%= pet.gender %></li>
        <li><strong>Nascimento: </strong><%= pet.birth_date.strftime("%d/%m/%Y") %></li>
        <% pet.vaccinations.each do | vaccination | %>
            <li><strong><%= vaccination_message(vaccination) %></strong></li>
        <% end %>
      </ul>
    </div>
  </div>
  <br>
  <% end %>
<% end %>

<div class="row">
    <div class="col-md-12">
      <% @pets.each do |pet| %>
        <div class="col-md-2">
          <%= image_tag pet.photo.url(:medium), height: 150 %>
        </div>
        <div class="col-md-10">
          <h2><%= link_to pet.name, pet_path(pet.id) %></h2>
          <li><strong>Espécie: </strong><%= pet.species %></li>
          <li><strong>Raça: </strong><%= pet.breed %></li>
          <li><strong>Gênero: </strong><%= pet.gender %></li>
          <li><strong>Nascimento: </strong><%= pet.birth_date %></li>
        </div>
      <% end %>
    </div>
</div>
